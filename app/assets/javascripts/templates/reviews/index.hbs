{{#if model}}
  <div class='text-center'>
    {{link-to "Add a New Review" 'reviews.new'}}
  </div>
  <ul class="push-down no-bullet">
    {{#each controller}}
      <li class='review'>
        <div class='review-header'>
          <div>
            {{#if user.hasAvatar}}
             <img class='u-circle tiny-thumbnail' {{bind-attr src='user.avatarUrl'}} />
            {{else}}
              <img class='u-circle tiny-thumbnail' src='http://xcellis.com/wp-content/uploads/2013/09/avatar-placeholder.png'>
            {{/if}}
            <div class='right'>
              <strong class='right'>{{rating}} / 10</strong>
            </div>
          </div>
          <div>
            <strong>{{userFullName}}</strong> reviewed on {{displayDate createdAt}}
          </div>
        </div>

        <div class='review-body'>
          {{post}}
        </div>
      </li>
    {{/each}}
  </ul>

{{else}}
  <p>There are no current reviews. {{link-to "Wanna add one?" 'reviews.new'}}</p>
{{/if}}
