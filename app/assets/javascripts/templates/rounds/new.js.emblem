h2.text-centered Start a New Round

form submit='createRound'
  fieldset
    label for="course" * Course
    view Ember.Select content=courses selection=course.content optionValuePath="content.id" optionLabelPath="content.name" prompt="Select Course" id="course" required=true

    p
      ' Can't see the course you're looking for? Why not
      link-to 'suggest a new course?' 'courses.new'

    label for="players" Players
    .row
      .small-9.columns
        auto-complete id="players" model=potentialPlayers selection=selectedPlayer value=query displayKey="fullName" class="larger-input"
      .small-3.columns
        button.button.expand{action addPlayer} disabled=noPlayerSelected
          i.fi-plus
    .row
      .columns
        ol
          li= currentUser.fullName
          each players
            li
              = fullName
              | &nbsp;
              button.button.alert.round{action removePlayer this}
                i.fi-minus

    button.button.expand type="submit" Start Round
